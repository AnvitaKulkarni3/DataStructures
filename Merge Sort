#include <stdio.h>

void displayArray(int a[], int n){
    for(int i=0;i<n;i++){
        printf("%d ",a[i]);
    }
}

void merge(int a[], int low, int mid, int high){
    int i,j,k,h,temp[100];
    i=low;
    h=low;
    j=mid+1;
    while(h<=mid && j<=high){
        if(a[h]<=a[j]){
            temp[i]=a[h];
            h++;
        }
        else{
            temp[i]=a[j];
            j++;
        }
        i++;
    }
    if(h<=mid){
        for(k=h;k<=mid;k++){
            temp[i]=a[k];
            i++;
        }
    }
    else{
        for(k=j;k<=high;k++){
            temp[i]=a[k];
            i++;
        }
    }
    for(k=low;k<=high;k++){
        a[k]=temp[k];
    }
}

int splitAndMerge(int a[], int low, int high){
    if(low<high){
        int mid=low+(high-low)/2;
        splitAndMerge(a,low,mid);
        splitAndMerge(a,mid+1,high);
        merge(a,low,mid,high);
    }
}

int main(){
    int arr[10] = {6,2,9,7,1,0,5,3,8,4};
    displayArray(arr,10);
    splitAndMerge(arr,0,10-1);
    displayArray(arr,10);
}
