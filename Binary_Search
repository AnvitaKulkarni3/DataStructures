#include <stdio.h>
int BinarySearch(int a[], int n, int key) {
    int left = 0, right = n - 1;
    while (left <= right) {
	  int mid = left + (right - left) / 2;
		if(arr[mid] == key){
			return mid;
		}
		else if(key < arr[mid]){
			right = mid - 1;
		}
		else{
			left = mid + 1;
		}
    }
    return -1;
}

int main() {
    int n, key;
    printf("Enter array size: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter array: );
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    printf("Enter the key element: ");
    scanf("%d", &key);
    int position = binarySearch(arr, n, key);
    if (position != -1){
        printf("Element %d is found at index %d\n", key, position);
    }
    else{
        printf("Element %d is not found\n", key);
    }
    return 0;
}
